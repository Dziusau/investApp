  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <GridPane alignment="CENTER" hgap="3.0" layoutX="198.0" layoutY="150.0" prefWidth="242.0" vgap="3.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="40.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="60.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label fx:id="nameLabel" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" />
                  <PasswordField fx:id="passwordField" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Введите пароль" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label alignment="CENTER" layoutX="10.0" layoutY="16.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Пароль:" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" />
                  <TextField fx:id="nameField" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" />
               </children>
            </GridPane>
            <Button fx:id="enterButton" alignment="CENTER" layoutX="245.0" layoutY="260.0" mnemonicParsing="false" onAction="#onEnterButtonClick" prefHeight="30.0" prefWidth="150.0" text="Войти" textAlignment="CENTER" />
            <Label fx:id="errorLabel" alignment="CENTER" layoutY="350.0" maxWidth="1.7976931348623157E308" prefHeight="20.0" prefWidth="640.0" />
            <Button alignment="CENTER" layoutX="245.0" layoutY="300.0" mnemonicParsing="false" onAction="#onExitButtonClick" prefHeight="30.0" prefWidth="150.0" text="назад" textAlignment="CENTER" />
      </children>
    </AnchorPane>
  </children>
